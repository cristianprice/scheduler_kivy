#:import PythonLexer kivy.extras.highlight.PythonLexer
#:include kv/components.kv

<CodeBoxLayout>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    ScrollView:
        do_scroll_x: True
        do_scroll_y: True        
        CodeInput:
            id: code_input
            do_wrap: False
            width: 800
            height: 200
            text: "print('Hello, World!')"
            lexer: PythonLexer()

    ScrollView:
        do_scroll_x: True
        do_scroll_y: True
        size_hint_y: .3
        Label:
            id: output
            size_hint: None, None
            text_size: None, None
            size: self.texture_size
            markup: True

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .1
        spacing: 20

        ThButton:
            text: "Run"
            on_release: root.on_run(root.ids.output, root.ids.code_input)

        ThButton:
            text: "Format"
            on_release: root.on_format(root.ids.code_input)

        ThButton:
            text: "Load File"
            on_release: root.on_button2_click()
        
        ThButton:
            text: "Paste"
            on_release: root.on_paste(root.ids.code_input)


